{
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": "off",
        "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1 }]
    },
    "env" : {
        "browser": true,
        "node": true
    },
    "globals": {
        "angular": true,
        "_": true,
        "moment": true
    }
}
